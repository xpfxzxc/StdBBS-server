{
  "name": "stdbbs-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "set NODE_ENV=dev && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "set NODE_ENV=dev && tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "seed:create": "ts-node node_modules/typeorm/cli.js migration:create -c seed -f ormconfig-dev.ts -n ",
    "seed:run": "ts-node node_modules/typeorm/cli.js migration:run -c seed -f ormconfig-dev.ts",
    "seed:revert": "ts-node node_modules/typeorm/cli.js migration:revert -c seed -f ormconfig-dev.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.10.1",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.10.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "connect-redis": "^4.0.3",
    "csurf": "^1.10.0",
    "express-session": "^1.17.0",
    "file-type": "^12.4.0",
    "image-size": "^0.8.3",
    "mysql": "^2.17.1",
    "nestjs-config": "^1.4.4",
    "nestjs-redis": "^1.2.3",
    "nestjs-typeorm-paginate": "^1.0.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "sharp": "^0.23.2",
    "svg-captcha": "^1.4.0",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "0.0.11",
    "@types/csurf": "^1.9.35",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/express-session": "^1.15.15",
    "@types/faker": "^4.1.7",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/passport-local": "^1.0.33",
    "@types/sharp": "^0.23.0",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "2.0.7",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
